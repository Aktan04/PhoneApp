@inherits LayoutComponentBase
@using MudBlazor


<MudLayout>

    <MudAppBar Color="Color.Primary" Elevation="1">
        <MudText Typo="Typo.h6">PhoneApp</MudText>
        <MudSpacer />
        <MudText Typo="Typo.subtitle2">Blazor + Clean Architecture</MudText>
    </MudAppBar>

    <MudDrawer Variant="DrawerVariant.Responsive"
               Elevation="1"
               Open="true">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="pa-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
